server {
    server_name ${DOMAIN};
    listen 443 ssl;

    sendfile on;
    keepalive_timeout  65;
    default_type  application/octet-stream;

    root /var/www/naks-infosystem/dist;
    index index.html;

    location /static/ {
        alias /var/www/naks-infosystem/static/;
    }

    location / {
        try_files ${DOLLAR}uri ${DOLLAR}uri/ /index.html;
    }
}
